<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_violet</item>
        <item name="colorPrimaryDark">@color/dark_violet_more</item>
        <item name="colorAccent">@color/light_pink</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="InputDarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/default_app_white</item>
        <item name="colorAccent">@color/default_app_white</item>

        <!-- Change input color -->
        <item name="android:textColorHint">@color/default_app_white</item>
        <item name="colorControlActivated">@color/default_app_white</item>
        <item name="colorControlHighlight">@color/default_app_white</item>
        <item name="colorControlNormal">@color/default_app_white</item>
    </style>

</resources>